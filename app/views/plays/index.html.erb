<h1>Listing plays</h1>

<table>
  <tr>
    <th>Play ID</th>
    <th>Game ID</th>
    <th>Game Name</th>
    <th>UserOne ID</th>
    <th>UserOne Name</th>
    <th>TargetUser ID</th>
    <th>TargetUser Name</th>
    <th>UserOne Kill Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= play.id %></td>
    <td><%= play.game_id %></td>
    <td><%= play.game.gamename %></td>
    <td><%= play.userone_id %></td>
    <td><%= play.user.username %></td>
    <td><%= play.targetuser_id %></td>
    <td><%= play.targetted.try(:username) %></td>
    <td><%= play.useronekillcode %></td>
    <td><%= link_to 'Show', play %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %></td>
    <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

